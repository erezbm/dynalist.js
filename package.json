{
  "name": "dynalist-api-wrapper",
  "version": "1.0.0",
  "description": "A JavaScript Dynalist API wrapper",
  "main": "dist/node/index.cjs.js",
  "types": "dist/types/index.d.ts",
  "module": "dist/node/esm/index.js",
  "unpkg": "dist/browser/index.umd.js",
  "scripts": {
    "prebuild": "rimraf dist/*",
    "build": "rollup -c",
    "test": "jest",
    "prepublishOnly": "npm test && npm run build"
  },
  "files": [
    "dist/"
  ],
  "author": "Erez Ben Moshe",
  "license": "MIT",
  "homepage": "https://github.com/erezbm/javascript-dynalist-api-wrapper#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/erezbm/javascript-dynalist-api-wrapper.git"
  },
  "dependencies": {
    "cross-fetch": "^3.0.6"
  },
  "devDependencies": {
    "@types/jest": "^26.0.14",
    "@typescript-eslint/eslint-plugin": "^4.4.1",
    "@typescript-eslint/parser": "^4.4.1",
    "dotenv": "^8.2.0",
    "eslint": "^7.11.0",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-plugin-import": "^2.22.0",
    "jest": "^26.5.3",
    "rimraf": "^3.0.2",
    "rollup": "^2.33.1",
    "rollup-plugin-typescript2": "^0.29.0",
    "ts-jest": "^26.4.1",
    "typescript": "^4.0.3"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": "airbnb-typescript/base",
    "parserOptions": {
      "project": "./tsconfig.eslint.json"
    },
    "rules": {
      "max-len": "off",
      "no-underscore-dangle": "off",
      "object-curly-newline": "off"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/?(*.)+(spec|test).[jt]s?(x)"
    ],
    "globals": {
      "ts-jest": {
        "diagnostics": {
          "ignoreCodes": "TS151001"
        }
      }
    }
  }
}
